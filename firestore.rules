rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == 'admin@connection.com' || 
         request.auth.token.email == 'imanibraah@gmail.com');
    }

    // Users collection rules
    // - Users can read/write their own data
    // - Admins can read all user data (for the dashboard)
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Videos collection rules
    // - Authenticated users can read videos
    // - Only admins can create, update, or delete videos
    match /videos/{videoId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // Default catch-all: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
